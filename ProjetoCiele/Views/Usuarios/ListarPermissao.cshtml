@model ProjetoCiele.Models.ListarPermisaoModel
<div class="row">
        <div class="col-6">
            <ul class="list-group">
                @foreach(var item in Model.PermissaoUsuarios)
            {
                <li class="list-group-item">
                     <a href="/PermissaoUsuario/Remover/@item.id" class="btn btn-danger"> X </a>
                    @item.permissao.nome
                    </li>
            }
            </ul>
        </div>
        <div class="col-6">
            <ul class="list-group">
                @foreach (var item in Model.TodasPermissoes)
                {
                    <li class="list-group-item"> 
                        <a href="/PermissaoUsuario/Adicionar/@Model.UsuarioId/@item.id" class="btn btn-success">+</a>
                        @item.nome;
                    </li>
                }
            </ul>
        </div>
</div>