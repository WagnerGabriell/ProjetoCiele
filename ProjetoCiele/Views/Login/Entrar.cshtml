<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <div class="card">
            <div class="card card-header">
                Bem Vindo ao Login
                <div class="card card-body">
                    @if (TempData["erro"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["erro"]
                        </div>
                    }
                    <form action="/Login/Entrar" method="post">
                        <input type="text" name="email" placeholder="User" />
                        <input type="password" name="senha" placeholder="Passord" />
                        <button type="submit">Logar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>